{
  "extends": [
    "config:recommended",
    "config:base"
  ],
  "enabledManagers": [
    "cargo",
    "helmv3"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "cargo"
      ],
      "matchPackageNames": [
        "*"
      ],
      "osvVulnerabilityAlerts": true,
      "automerge": false,
      "labels": [
        "rust",
        "vulnerability"
      ]
    },
    {
      "matchManagers": [
        "helmv3"
      ],
      "matchPackageNames": [
        "gsp_platform"
      ],
      "enabled": true
    }
  ],
  "hostRules": [
    {
      "matchHost": "lo-moriconi.github.io",
      "hostType": "helm",
      "username": null,
      "password": null
    }
  ],
  "helmv3": {
    "fileMatch": [
      "infrastructure/gsp_platform/Chart.yaml"
    ],
    "enabled": true,
    "postUpdateOptions": [
      "helmUpdateSubChartArchives"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "schedule": [
    "every weekday after 9am and before 5pm"
  ],
  "rollbackPrs": true
}
